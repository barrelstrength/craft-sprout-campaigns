{% extends "sprout-base-email/_layouts/elementindex" %}
{% set title = "Campaign Email"|t('sprout-campaign') %}
{% set elementType = 'barrelstrength\\sproutcampaign\\elements\\CampaignEmail' %}

{% block actionButton %}
    {% set campaignTypes = craft.sproutEmail.getCampaignTypes() %}

    <div class="buttons">
        <div class="btngroup submit">

            {% if campaignTypes|length %}

                <div class="btn submit menubtn add icon">{{ "New Campaign"|t('sprout-campaign') }}</div>
                <div class="menu">
                    <ul>
                        {% for campaignType in campaignTypes %}
                            <li>
                                <a href="{{ url('sprout-campaign/' ~ campaignType.id ~ '/new') }}">{{ campaignType.name|t('sprout-campaign') }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

            {% else %}

                <a class="btn submit add icon"
                   href="{{ url('sprout-campaign/settings/campaigntypes/edit/new') }}">{{ "New Campaign Type"|t('sprout-campaign') }}</a>

            {% endif %}
        </div>
    </div>
{% endblock %}

{% block content %}

    {{ parent() }}

    {% include "sprout-base-email/_modals/base" %}

{% endblock %}